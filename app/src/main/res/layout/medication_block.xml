<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tourblock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap"
        android:layout_marginBottom="@dimen/default_gap"
        android:background="@color/color2"
        android:onClick="tourClick"
        tools:context="com.akzubarev.homedoctor.activities.ListActivity">

    <TextView
            android:id="@+id/medicationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название лекарства"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen5"
            android:onClick="tourClick"
            android:layout_alignParentTop="true" />

    <TextView
            android:id="@+id/medicationNextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicationName"
            android:text="Следующий прием: 14:00 12.07"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen4"
            android:onClick="tourClick"
            android:layout_alignParentBottom="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="@string/arrow"
            android:textColor="@color/additional"
            android:onClick="tourClick"
            android:textSize="@dimen/dimen1"
            android:gravity="center_vertical|end"
            android:id="@+id/arrow" />
</RelativeLayout>