<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Spinner">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|end</item>
        <item name="android:layout_gravity">center_horizontal|end</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <!--        <item name="android:dropDownHorizontalOffset">-200dp</item>--> <!-- set programmatically -->
        <item name="android:dropDownVerticalOffset">30dp</item>
    </style>

    <style name="ActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/dimen1</item>
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="WeekButtons" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color3</item>
        <item name="android:textSize">@dimen/dimen5</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal|end</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="android:backgroundTint">@drawable/edit_text_tint_selector</item>
        <item name="android:textColorHint">@color/shadowed</item>
        <item name="android:dropDownVerticalOffset">30dp</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin
        </item>
        <!--        <item name="android:paddingTop">@dimen/activity_horizontal_margin-->
        <!--        </item>-->
        <item name="android:paddingRight">@dimen/activity_horizontal_margin
        </item>
        <!--        <item name="android:paddingBottom">@dimen/activity_horizontal_margin-->
        <!--        </item>-->
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/color2</item>
        <item name="android:itemBackground">@color/color3</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:windowTitleStyle">@style/AlertTitleStyle</item>
        <item name="android:textAppearanceMedium">@style/AlertTitleStyle</item>
        <item name="android:buttonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertTitleStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/dimen3</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen4</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/additional</item>
        <item name="colorControlActivated">@color/additional</item>
    </style>

    <style name="checkbox" parent="MyCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:theme">@style/MyCheckBox</item>
    </style>
</resources>