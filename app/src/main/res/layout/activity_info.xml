<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_authors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color2"
        android:orientation="vertical"
        tools:context=".ui.activities.InfoActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.HomeDoctor.PopupOverlay" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color2"
            android:orientation="vertical"
            style="@style/LinearLayout"
            android:weightSum="1">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/info_app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/info_app_description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/dimen5" />

        <TextView
                android:id="@+id/version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/info_version_placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/dimen5" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen5" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Разработчик"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/dimen4" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/info_owner"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />


        <TextView
                android:id="@+id/github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/link"
                android:textColorLink="@color/additional"
                android:textSize="@dimen/dimen4"
                android:onClick="goToWeb"
                android:autoLink="all" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Дисклеймер"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/dimen4" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="@string/info_hse"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Научный руководитель"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/dimen4" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="@string/info_science_manager"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />
    </LinearLayout>
</LinearLayout>
