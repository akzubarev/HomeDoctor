    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:state_multiline">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal|end</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="android:backgroundTint">@drawable/edit_text_tint_selector</item>
        <item name="android:textColorHint">@color/shadowed</item>
        <item name="android:dropDownVerticalOffset">30dp</item>
    </style>

    <style name="NormalTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <style name="ClickableTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal|end</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="android:backgroundTint">@drawable/edit_text_tint_selector</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <!--        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>-->
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <!--        <item name="android:paddingBottom">@dimen/activity_horizontal_margin </item>-->
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background_main</item>
        <item name="android:itemBackground">@color/background_second</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:textColorSecondary">@color/main</item>
        <item name="android:windowTitleStyle">@style/AlertTitleStyle</item>
        <item name="android:textAppearanceMedium">@style/AlertTitleStyle</item>
        <item name="android:buttonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/AlertButtonStyle</item>
        <item name="textColorAlertDialogListItem">@color/main</item>

        <item name="android:textColorTertiary">@color/main</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:colorControlHighlight">@color/primary</item>
        <item name="android:colorControlNormal">@color/primary</item>
    </style>

    <style name="AlertTitleStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/alert_title_size</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="checkbox" parent="MyCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:theme">@style/MyCheckBox</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="FloatingActionButton" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:backgroundTint">@color/background_main</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="borderWidth">1dp</item>
    </style>

    <style name="switchText"  parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>