<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_shadowed"
    android:orientation="vertical">

    <LinearLayout style="@style/LinearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:labelFor="@id/name"
            android:text="Название"
            android:textColor="@color/main"
            android:textSize="@dimen/subheading" />

        <EditText
            android:id="@+id/name"
            style="@style/EditText"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:text="Ангина 2022.03"
            android:textSize="@dimen/subheading" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:labelFor="@id/gender"
            android:text="Диагноз"
            android:textColor="@color/main"
            android:textSize="@dimen/subheading" />

        <EditText
            android:id="@+id/diagnosis"
            style="@style/EditText"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:text="Ангина"
            android:textSize="@dimen/subheading" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:labelFor="@id/birthday"
            android:text="Конец приема"
            android:textColor="@color/main"
            android:textSize="@dimen/subheading" />

        <EditText
            android:id="@+id/end_date"
            style="@style/EditText"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:text="20.05.2022"
            android:textSize="@dimen/subheading" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:labelFor="@id/birthday"
            android:text="Автоматическое отключение оповещений"
            android:textColor="@color/main"
            android:textSize="@dimen/subheading" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/auto_off"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:textOff="×"
            android:textOn="✓"
            app:showText="true"
            app:switchTextAppearance="@style/switchText"
            app:thumbTint="@color/primary" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:labelFor="@id/medications_list"
            android:text="Лекарства"
            android:textColor="@color/main"
            android:textSize="@dimen/subheading" />

        <ImageButton
            android:id="@+id/add_medication_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"
            android:tag="add_medication"
            android:textColor="@color/primary"
            android:textSize="@dimen/normal" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medications_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        tools:itemCount="3"
        tools:listitem="@layout/block_medication_prescription" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/background_second"
        android:tag="save"
        android:text="Сохранить изменения"
        android:textColor="@color/primary" />

</LinearLayout>