<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    card_view:cardBackgroundColor="@color/background_main"
    card_view:cardCornerRadius="20dp"
    tools:showIn="@layout/fragment_old_treatments_list">

    <LinearLayout
        style="@style/LinearLayout"
        android:layout_marginVertical="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_medication"
            app:tint="@color/primary" />


        <LinearLayout
            style="@style/LinearLayout"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/med_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/medication_name_placeholder"
                android:textColor="@color/main"
                android:textSize="@dimen/normal" />


            <TextView
                android:id="@+id/prescription_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/prescription_name_placeholder"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/profile_name_placeholder"
                android:textColor="@color/shadowed"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/treat_datetime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="@string/datetime_placeholder"
            android:textColor="@color/main"
            android:textSize="@dimen/normal" />
    </LinearLayout>
</androidx.cardview.widget.CardView>