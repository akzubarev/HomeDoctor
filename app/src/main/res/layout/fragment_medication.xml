    <LinearLayout
        android:id="@+id/medication_layout"
        style="@style/LinearLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:padding="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:background="@color/shadowed" />

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_margin="0dp"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="Количество таблеток"
                android:textColor="@color/main"
                android:textSize="@dimen/subheading" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/amount"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:hint="4"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="20" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="Срок годности"
                android:textColor="@color/main"
                android:textSize="@dimen/subheading" />

            <TextView
                android:id="@+id/expiry_date_edit_text"
                style="@style/ClickableTextView"
                android:hint="20.11.2022"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:text="20.11.2022" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="Доступно профилям"
                android:textColor="@color/main"
                android:textSize="@dimen/subheading" />


            <TextView
                android:id="@+id/allowed_profiles"
                style="@style/ClickableTextView"
                android:text="Всем" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:labelFor="@id/notify"
                android:text="Получать уведомления об окончании запасов и истечении срока годности"
                android:textColor="@color/main"
                android:textSize="@dimen/subheading" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/notify"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:checked="true"
                android:textOff="×"
                android:textOn="✓"
                app:showText="true"
                app:switchTextAppearance="@style/switchText"
                app:thumbTint="@color/primary" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:background="@color/shadowed" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="Аналоги"
        android:textAlignment="center"
        android:textColor="@color/main"
        android:textSize="@dimen/subheading" />

    <TextView
        android:id="@+id/no_analogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="(нет данных об аналогах)"
        android:textAlignment="center"
        android:textColor="@color/main"
        android:textSize="@dimen/subheading"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/analogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/search"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:padding="4dp"
        android:scrollbars="vertical"
        tools:itemCount="2"
        tools:listitem="@layout/block_medication_stat" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/background_second"
        android:tag="Отмена"
        android:text="Назад"
        android:textColor="@color/primary" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/background_second"
        android:tag="Редактирование"
        android:text="Редактировать"
        android:textColor="@color/primary" />

</LinearLayout>