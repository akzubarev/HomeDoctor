<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color2"
        tools:context=".activities.MedicationsActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_weight="0"
                    android:gravity="center_vertical|start"
                    android:text="Название"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:hint="Название"
                    android:textColorHint="@color/shadowed"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_weight="0"
                    android:gravity="center_vertical|start"
                    android:text="Длительность курса"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="center"
                    android:hint="Длительность"
                    android:textColorHint="@color/shadowed"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

            <Spinner
                    android:id="@+id/layout_spinner"
                    android:entries="@array/layout_dropdown"
                    style="@style/Spinner" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_weight="0"
                    android:gravity="center_vertical|start"
                    android:text="Частота приемов"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:hint="Частота приемов"
                    android:textColorHint="@color/shadowed"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/goal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    tools:context="com.education4all.decimals.com.education4all.SettingsTaskTab">

                <TextView
                        android:id="@+id/roundMinText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="settings_round_length"
                        android:textAlignment="textStart"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dimen3" />

            </LinearLayout>

            <TextView
                    android:id="@+id/account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:gravity="center_vertical|start"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="settings_account"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="horizontal"-->
            <!--            android:paddingLeft="@dimen/activity_horizontal_margin"-->
            <!--            android:paddingTop="@dimen/activity_vertical_margin"-->
            <!--            android:paddingRight="@dimen/activity_horizontal_margin"-->
            <!--            android:paddingBottom="@dimen/activity_vertical_margin">-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center_vertical|start"-->
            <!--                android:layout_weight="0"-->
            <!--                android:gravity="center_vertical|start"-->
            <!--                android:text="E-mail"-->
            <!--                android:textColor="@color/main"-->
            <!--                android:textSize="@dimen/dimen4" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/email"-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center_vertical|end"-->
            <!--                android:layout_weight="1"-->
            <!--                android:gravity="center_vertical|end"-->
            <!--                android:tag="1"-->
            <!--                android:text="example@gmail.com"-->
            <!--                android:textColor="@color/shadowed"-->
            <!--                android:textSize="@dimen/dimen4" />-->
            <!--        </LinearLayout>-->

            <LinearLayout
                    android:id="@+id/id_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_weight="0"
                        android:gravity="center_vertical|start"
                        android:text="settings_id"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dimen4" />

                <TextView
                        android:id="@+id/id"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:tag="1"
                        android:text="settings_id_placeholder"
                        android:textColor="@color/shadowed"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/dimen5" />
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/reminder_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start"
                        android:text="settings_reminder"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dimen4" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/remind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="0"
                        android:checked="false"
                        android:gravity="center_vertical|end"
                        android:textOff="settings_cross"
                        android:textOn="settings_check"
                        app:showText="true"
                        app:thumbTint="@color/additional"
                        app:trackTint="@color/shadowed" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/remind_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start"
                        android:text="settings_reminderTime"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dimen4" />

                <TextView
                        android:id="@+id/remind_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:tag="1"
                        android:text="settings_reminderTime_placeholder"
                        android:textColor="@color/additional"
                        android:textSize="@dimen/dimen4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
