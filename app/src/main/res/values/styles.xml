<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <style name="Spinner">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|end</item>
        <item name="android:layout_gravity">center_horizontal|end</item>
        <item name="android:background">@null</item>
        <!--        <item name="android:dropDownHorizontalOffset">-200dp</item>--> <!-- set programmatically -->
        <item name="android:dropDownVerticalOffset">30dp</item>
    </style>

    <style name="ActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/actionbar_size</item>
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="WeekButtons" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/background_second</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/main</item>
    </style>

